{
  "version": 2,
  "buildCommand": "npm install --prefix client && cd client && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --prefix server",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
