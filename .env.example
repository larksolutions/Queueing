# Environment Variables Template

# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cics-queue?retryWrites=true&w=majority

# JWT Secret (use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
NODE_ENV=development
PORT=5001

# Email Configuration (for notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=CICS Queue System <noreply@cics.edu>

# Client Configuration (for development)
VITE_API_URL=https://cicsqrqueueing.vercel.app

# For production, Vercel will use:
# VITE_API_URL=https://your-project.vercel.app
